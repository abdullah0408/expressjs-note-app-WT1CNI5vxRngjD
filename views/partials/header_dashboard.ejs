<div class="container mx-auto px-4">
  <header
    class="flex items-center justify-between py-3 mb-4 relative"
    role="banner"
  >
    <a href="/" class="text-white font-bold text-3xl">Notes</a>

    <div class="flex items-center md:hidden">
      <form class="flex" role="search" method="post" action="/dashboard/search">
        <div class="relative">
          <input
            type="search"
            name="searchTerm"
            class="border border-gray-500 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-gray-500 transition duration-200 bg-gray-700 text-white"
            placeholder="Search..."
            aria-label="Search"
          />
          <button
            type="submit"
            class="absolute right-2 top-2 text-gray-400 hover:text-gray-300 transition duration-200"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-4.35-4.35M18 10a8 8 0 10-8 8 8 8 0 008-8z"
              ></path>
            </svg>
          </button>
        </div>
      </form>
    </div>

    <form
      class="hidden md:flex flex-grow mb-2 md:mb-0 justify-center"
      role="search"
      method="post"
      action="/dashboard/search"
    >
      <div class="relative w-1/3 md:w-1/4">
        <input
          type="search"
          name="searchTerm"
          class="w-full border border-gray-500 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-gray-500 transition duration-200 bg-gray-700 text-white"
          placeholder="Search..."
          aria-label="Search"
        />
        <button
          type="submit"
          class="absolute right-2 top-2 text-gray-400 hover:text-gray-300 transition duration-200"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M21 21l-4.35-4.35M18 10a8 8 0 10-8 8 8 8 0 008-8z"
            ></path>
          </svg>
        </button>
      </div>
    </form>

    <nav class="hidden md:flex items-center space-x-4" role="navigation">
      <a
        href="/"
        class="text-gray-300 hover:text-gray-400 transition duration-200"
        >Home</a
      >
      <a
        href="/dashboard"
        class="text-gray-300 hover:text-gray-400 transition duration-200"
        >Dashboard</a
      >
      <a
        href="https://github.com/abdullah0408/expressjs-note-app-WT1CNI5vxRngjD"
        class="text-gray-300 hover:text-gray-400 transition duration-200"
        >GitHub</a
      >
      <div class="flex space-x-2">
        <a
          href="/logout"
          class="btn btn-outline-primary border border-gray-500 text-gray-500 px-4 py-2 rounded hover:bg-gray-500 hover:text-white transition duration-200"
          >Log Out</a
        >
      </div>
    </nav>
  </header>

  <nav
    class="md:hidden fixed bottom-0 left-0 right-0 bg-gray-800 p-3 flex justify-around border-t border-gray-700 rounded-t-lg shadow-lg"
    role="navigation"
