<div class="container mx-auto">
    <header class="flex flex-wrap items-center justify-between py-3 mb-4">
        <a href="/dashboard" class="flex items-center text-primary font-bold text-3xl mb-2 md:mb-0">Notes</a>

        <!-- Hamburger Menu -->
        <div class="md:hidden">
            <button id="hamburger" aria-expanded="false" aria-label="Toggle mobile menu" class="focus:outline-none">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>

        <!-- Search Form -->
        <form class="hidden md:flex flex-grow mb-2 md:mb-0 justify-center" role="search" method="post" action="/dashboard/search">
            <div class="relative w-1/3 md:w-1/4">
                <input 
                    type="search" 
                    name="searchTerm" 
                    class="w-full border border-primary rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200" 
                    placeholder="Search..." 
                    aria-label="Search">
                <button 
                    type="submit" 
                    class="absolute right-2 top-2 text-gray-600 hover:text-gray-800 transition duration-200">
                    <!-- Search Icon -->
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M18 10a8 8 0 10-8 8 8 8 0 008-8z"></path>
                    </svg>
                </button>
            </div>
        </form>

        <!-- Logout Button for Desktop -->
        <div class="hidden md:flex text-right">
            <a href="/logout" class="border border-blue-500 text-blue-500 rounded px-4 py-2 transition duration-200 hover:bg-blue-500 hover:text-white">Log Out</a>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md p-4">
        <div class="flex flex-col space-y-2">
            <form class="flex justify-center mb-2" role="search" method="post" action="/dashboard/search">
                <div class="relative w-full">
                    <input 
                        type="search" 
                        name="searchTerm" 
                        class="w-full border border-primary rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200" 
                        placeholder="Search..." 
                        aria-label="Search">
                    <button 
                        type="submit" 
                        class="absolute right-2 top-2 text-gray-600 hover:text-gray-800 transition duration-200">
                        <!-- Search Icon -->
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M18 10a8 8 0 10-8 8 8 8 0 008-8z"></path>
                        </svg>
                    </button>
                </div>
            </form>
            <a href="/logout" class="border border-blue-500 text-blue-500 rounded px-4 py-2 transition duration-200 hover:bg-blue-500 hover:text-white">Log Out</a>
        </div>
    </div>
</div>

<script>
    // JavaScript for toggling the mobile menu
    document.getElementById('hamburger').addEventListener('click', function() {
        const menu = document.getElementById('mobile-menu');
        const isHidden = menu.classList.toggle('hidden');
        this.setAttribute('aria-expanded', !isHidden);
    });
</script>
