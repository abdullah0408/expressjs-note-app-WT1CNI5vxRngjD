<div class="container mx-auto pb-5 mb-5 bg-black text-white">
  <!-- Top row with username and New Note button -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl sm:text-4xl font-semibold">Search Result</h1>
    </div>
    <div>
      <a
        href="/dashboard"
        class="px-4 py-2 bg-gray-600 text-white rounded shadow hover:bg-gray-700 transition duration-200 text-sm sm:text-base"
        >Dashboard</a
      >
    </div>
  </div>

  <!-- Search results display -->
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
  >
    <% if (searchResults.length > 0) { %> <%
    searchResults.forEach(function(note) { %>
    <div
      class="bg-gray-800 border border-gray-600 rounded-lg shadow-md p-4 h-52 transition duration-300 hover:bg-gray-700 hover:shadow-lg hover:scale-105"
    >
      <a
        href="/dashboard/item/<%= note._id %>"
        class="no-underline h-full flex flex-col justify-between text-gray-200"
      >
        <h5 class="text-lg font-bold mb-2 truncate"><%= note.title %></h5>
        <p class="text-gray-400 flex-1 overflow-hidden"><%= note.body %></p>
      </a>
    </div>
    <% }); %> <% } else { %>
    <div class="flex flex-col items-center">
      <h2 class="text-xl text-center">No items found</h2>
    </div>
    <% } %>
  </div>
</div>
