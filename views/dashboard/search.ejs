<div class="container mx-auto pb-5 mb-5">
    <!-- Top row with search and back button -->
    <div class="flex flex-col md:flex-row md:justify-between items-center mb-4">
        <!-- Left side: Greeting and search results -->
        <div class="flex flex-col sm:flex-row items-center w-full md:w-auto mb-2 md:mb-0">
            <h1 class="text-2xl font-semibold mb-2 sm:mb-0">Search Results</h1>
        </div>
        <!-- Right side: Back to Dashboard button -->
        <div class="mt-2 md:mt-0">
            <a href="/dashboard" class="px-4 py-2 bg-blue-500 text-white rounded shadow ml-0 sm:ml-4 hover:bg-blue-600 transition duration-200">Back to Dashboard</a>
        </div>
    </div>

    <!-- Search results display -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% if (searchResults.length > 0) { %>
            <% searchResults.forEach(function(note) { %>
                <div class="bg-white border border-blue-500 rounded-lg shadow-md p-4 h-52">
                    <a href="/dashboard/item/<%= note._id %>" class="no-underline h-full flex flex-col justify-between">
                        <h5 class="text-lg font-bold mb-2 truncate"><%= note.title %></h5>
                        <p class="text-gray-700 flex-1 overflow-hidden"><%= note.body %></p>
                    </a>
                </div>
            <% }); %>
        <% } else { %>
            <div class="flex flex-col items-center">
                <h2 class="text-xl text-center">No items found</h2>
            </div>
        <% } %>        
    </div>
</div>
